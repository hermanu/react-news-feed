{
  "name": "mernboilerplate",
  "version": "1.0.0",
  "engines": {
    "node": "15.x",
    "yarn": "1.x"
  },
  "description": "This is a boilerplate repo for creating new mern stack apps",
  "main": "server.js",
  "scripts": {
    "test": "NODE_ENV=test jest ./__tests__ --testTimeout=10000 --forceExit",
    "start": "node ./server/server.js",
    "dev": "nodemon ./server/server.js",
    "client": "cd client && yarn start",
    "mern": "concurrently -n 'server,client' -c 'yellow,blue' \"yarn run dev\" \"yarn run client\"",
    "heroku-postbuild": "cd client && yarn install && yarn run build"
  },
  "author": "Manuel Garcia",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongoose": "^5.11.8"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "jest": "^27.0.4",
    "nodemon": "^2.0.6",
    "supertest": "^6.1.3"
  }
}
